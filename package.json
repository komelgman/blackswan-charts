{
  "name": "blackswan-charts-workspace",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm -w apps/charts-demo run dev",
    "build": "npm run build:lib && npm run build:demo",
    "build:lib": "npm -w packages/charts-lib run build",
    "build:demo": "npm -w apps/charts-demo run build",
    "typecheck": "npm -w packages/charts-lib run typecheck && npm -w apps/charts-demo run typecheck",
    "lint": "eslint . --fix",
    "test:unit": "npm -w packages/charts-lib run test:unit",
    "test:ct": "npm -w packages/charts-lib run test:ct",
    "test:e2e": "npm -w apps/charts-demo run test:e2e"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "^7.28.0",
    "@babel/plugin-transform-flow-strip-types": "^7.27.1",
    "@eslint/js": "^9.39.2",
    "@playwright/experimental-ct-vue": "1.57.0",
    "@playwright/test": "1.57.0",
    "@rushstack/eslint-patch": "^1.15.0",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^25.0.9",
    "@typescript-eslint/eslint-plugin": "^8.53.1",
    "@typescript-eslint/parser": "^8.53.1",
    "@vitejs/plugin-vue": "^6.0.3",
    "@vitejs/plugin-vue-jsx": "^5.1.3",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-vue": "^10.7.0",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "jsdom": "^27.4.0",
    "npm-run-all": "^4.1.5",
    "playwright": "1.57.0",
    "prettier": "^3.8.0",
    "sass": "^1.97.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.1",
    "vite": "^6.4.1",
    "vite-plugin-babel": "^1.4.1",
    "vitest": "^4.0.17",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.2.2"
  }
}
