{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "src/**/__pct__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "lib": ["esnext", "DOM", "DOM.Iterable"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  }
}
